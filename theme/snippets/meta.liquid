<meta property="og:title" content="{{ page_title }}" />
<meta property="og:type" content="website" />
<meta property="og:url" content="{{ canonical_url }}" />
<meta property="og:description" content="{{ page_description }}" />
{% if template == 'product' %}
  <meta property="og:image" content="https:{{ product | img_url: '1200x630' }}" />
{% elsif template == 'article' %}
  <meta property="og:image" content="https:{{ article.image | img_url: '1200x630' }}" />
{% else %}
  <meta property="og:image" content="https:{{ settings.index_image | img_url: '1200x630' }}" />
{% endif %}
