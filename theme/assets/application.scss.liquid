.background-image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  overflow: hidden;
  background: $black;
  user-select: none;

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 1;
  }

  .background-image__landscape {
    @media screen and (max-width: $tablet) {
      display: none !important;
    }
  }

  .background-image__portrait {
    display: none;

    @media screen and (max-width: $tablet) {
      display: block;
    }
  }
