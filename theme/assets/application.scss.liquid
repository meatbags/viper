.swiper-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: $indexSwiper;
  background: $colourBackground;
  opacity: 0;
  pointer-events: none;

  &.active {
    opacity: 1;
    pointer-events: all;
  }

  .swiper-wrapper {
    width: 100%;
    height: 100%;

    .swiper-slide {
      @include pad(2, 2);
      width: 100%;
      height: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      cursor: grab;

      img {
        width: 100%;
        height: 100%;
        object-fit: contain;
      }
    }
  }

  .swiper-excerpt {
    left: $spaceBorder;
    bottom: $spaceBorder;
    position: absolute;
    width: 33.33%;
    z-index: 5;
    user-select: none;

    .swiper-excerpt__inner {
      display: flex;
      align-items: flex-start;
      flex-direction: column;
      @include pad(1, 0.5);
      padding-top: 0;
      transform: scale(0.9);

      .swiper-excerpt__title {
        white-space: nowrap;
        font-size: $fontSizeLarge;
        letter-spacing: $letterSpacingNavTitle;
        font-family: $fontStackTitle;
        text-decoration: underline;
      }

      .swiper-excerpt__content {
        font-family: $fontStackTitle;
        letter-spacing: $letterSpacingLarge;
        font-size: $fontSizeMedium;
        line-height: 1;

        p {
          margin: 0;
          padding: 0;
          @include pad(0, 0.25);
        }
      }
    }
  }

  .swiper-close {
    width: 50px;
    height: 50px;
    padding: $space;
    position: absolute;
    top: $space;
    right: $space;
    z-index: 10;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;

    .swiper-close__inner {
      width: 100%;
      height: 1px;
      border-bottom: $border;
      transform-origin: center;

      &:nth-child(1) {
        transform: translateY(1px) rotate(45deg);
      }

      &:nth-child(2) {
        transform: rotate(-45deg);
      }
    }

    &:hover {
      outline: $border;
    }
  }

  .swiper__arrow-next, .swiper__arrow-prev {
    cursor: pointer;
    width: 50px;
    height: 50px;
    padding: $space * 2;
    z-index: 10;
    position: absolute;
    top: 50%;

    .swiper__arrow-inner {
      width: 100%;
      height: 100%;
      border-left: $border;
      border-top: $border;
      transform: rotate(-45deg);
    }

    &.swiper-button-disabled {
      opacity: 0.35;
    }
  }

  .swiper__arrow-next {
    right: $space;
    left: auto;

    .swiper__arrow-inner {
      transform: rotate(135deg);
    }
  }

  .swiper__arrow-prev {
    left: $space;
    right: auto;
  }

  @media screen and (max-width: $tablet) {
    .swiper-wrapper {
      height: 100%;

      .swiper-slide {
        @include pad(0, 2);
      }
    }

    .swiper-excerpt {
      display: none;
    }

    .swiper-close {
      top: $space / 2;
      right: $space / 2;
    }

    .swiper__arrow-next, .swiper__arrow-prev {
      top: auto;
      bottom: $space / 2;
    }

    .swiper__arrow-prev {
      left: $space / 2;
    }

    .swiper__arrow-next {
      right: $space / 2;
    }
  }
}


