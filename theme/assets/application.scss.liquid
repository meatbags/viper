$fontStack: 'MyriadPro', sans-serif;
$fontStackTitle: 'Encient', serif;
$fontSizeSmall: 12px;
$fontSize: 16px;
$fontSizeMedium: 28px;
$fontSizeLarge: 40px;
$fontSizeHuge: 60px;
$lineHeight: 1;
$letterSpacing: 0.5px;

@mixin pad($x, $y) {
  padding-left: $x * $space;
  padding-right: $x * $space;
  padding-top: $y * $space;
  padding-bottom: $y * $space;
}


div, * {
  box-sizing: border-box;
  outline: 1px solid rgba(0,0,0,0.1);
}

body {
  width: 100%;
  height: 100vh;
  font-family: $fontStack;
  font-size: $fontSize;
  line-height: $lineHeight;
  letter-spacing: $letterSpacing;
  color: $colour;
  background: $colourBackground;
}

.wrapper {
  width: 100%;
  height: 100%;
  position: relative;
}

a {
  text-decoration: none;
  color: inherit;
}

#admin-bar-iframe {
  display: none;
}

.nav {
  font-family: $fontStackTitle;
  font-size: $fontSizeLarge;
  position: fixed;
  top: 50%;
  left: 25vw;
  transform: translateY(-50%) rotate(15deg);
  user-select: none;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  z-index: $indexNav;

  .nav__title {
    font-size: $fontSizeHuge;

    &:hover {
      text-decoration: underline;
    }
  }

  .nav__item {
    cursor: pointer;
    @include pad(0, 0.5);

    &:hover {
      text-decoration: underline;
    }
  }

  &.nav--alt {
    align-items: flex-start;
    transform: translateY(-50%);
    left: $spaceBorder;

    .nav__item {
      font-size: $fontSizeMedium;
    }

    .nav__back {
      display: block;
    }
  }

  &.nav--hide {
    display: none;
  }
}

.footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  z-index: $indexFooter;
  display: flex;
  padding-left: $spaceBorder;
  padding-right: $spaceBorder;
  padding-bottom: $spaceBorder / 2;
  font-size: $fontSizeSmall;
  font-weight: bold;

  .footer__section {
    width: 50%;
    display: flex;

    .footer__item {
      text-transform: uppercase;
      @include pad(0.5, 0);

      &:hover {
        text-decoration: underline;
      }
    }

    &:nth-of-type(1) {
      justify-content: flex-start;

      .footer__item:nth-child(1) {
        padding-left: 0;
      }
    }

    &:nth-of-type(2) {
      justify-content: flex-end;

      .footer__item:last-child {
        padding-right: 0;
      }
    }
  }
}

.grid {
  display: flex;
  justify-content: space-between;
  width: 70vw;
  position: absolute;
  right: 0;
  top: 0;
  overflow: hidden;
  user-select: none;
  margin-bottom: $spaceBorder;

  .grid__column {
    width: 33.333%;

    .grid__item {
      width: 100%;
      height: 32vw;

      a {
        position: relative;
        display: flex;
        width: 100%;
        height: 100%;

        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
        }

        .grid__item-overlay {
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          background: $colourOverlay;
          opacity: 0;
          pointer-events: none;
          display: flex;
          justify-content: flex-end;
          align-items: flex-start;

          .grid__item-text {
            @include pad(1, 1);
            text-align: center;

            .grid__item-title {
              margin-bottom: $space / 2;
            }
          }
        }

        &:hover {
          .grid__item-overlay {
            opacity: 1;
          }
        }
      }

      &.grid__item--double, &.grid__item--single {
        display: none;
      }
    }
  }

  @media screen and (max-width: $tablet) {
    .grid__column {
      width: 50%;

      .grid__item {
        height: 500px;
      }
      .grid__item.grid__item--double {
        display: block;
      }
      .grid__item.grid__item--triple {
        display: none;
      }
      &:nth-of-type(3) {
        display: none;
      }
    }
  }

  @media screen and (max-width: $mobile) {
    width: 100vw;

    .grid__column {
      width: 100%;

      .grid__item.grid__item--single {
        display: block;
      }
      .grid__item.grid__item--double {
        display: none;
      }
      &:nth-of-type(2) {
        display: none;
      }
    }
  }
}


// page-specific
.loading-screen {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: $indexLoadingScreen;
  background: $black;
  user-select: none;
  cursor: pointer;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0.5;
}

@keyframes logo {
  0% { opacity: 0; }
  100% { opacity: 1; }
}

.landing-page {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: $indexLandingPage;
  background: $colour;
  color: $black;
  user-select: none;
  cursor: pointer;
  display: flex;
  justify-content: center;
  align-items: center;

  img {
    height: 50vh;
    width: auto;
    object-fit: contain;
    animation-name: logo;
    animation-duration: 1s;
    animation-iteration-count: infinite;
    animation-direction: alternate;
  }
}

.background-image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  overflow: hidden;

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
}


