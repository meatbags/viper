// colours
$white: #fff;
$black: #101820;
$grey: #888;
$colour: #d6001c;
$colourHover: #fff;
$colourBackground: #e6bedd;
$colourMobileNavBackground: rgba($black, 0.85);
$colourOverlay: rgba($colourBackground, 0.75);
$colourNav: #f6001f;
$colourNavDropShadow: $black;

// space
$space: 8px;
$spaceBorder: $space * 7;
$spaceBorderMobile: $space * 2;

// z-index
$indexNav: 50;
$indexFooter: 50;
$indexLandingPage: 100;
$indexLoadingScreen: 200;
$indexMobileNav: 50;
$indexMobileNavButton: 60;
$indexSwiper: 100;

// breakpoints
$mediumScreen: 1500px;
$smallScreen: 1100px;
$tablet: 950px;
$mobile: 700px;
$mobilePortrait: 400px;

// animation
$transition: 0.35s;

// style
$border: 1px solid $colour;
$borderBlack: 1px solid $black;
$borderGrey: 1px solid $grey;
$borderSubtle: 1px solid rgba($black, 0.5);

