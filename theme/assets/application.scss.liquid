.product {
  width: 100%;
  display: flex;
  padding: $spaceBorder;
  padding-bottom: $spaceBorder * 2;
  position: relative;

  .product__gallery {
    width: 60%;
    display: flex;
    justify-content: flex-end;
    user-select: none;

    .product__gallery-menu {
      display: flex;
      flex-direction: column;
      margin-right: $space * 2;
      position: relative;

      .product__gallery-menu-thumbnail {
        width: 180px;
        height: 180px;
        cursor: pointer;
        margin-bottom: $space * 2;
        position: relative;

        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
        }

        .thumbnail-overlay {
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          //background: $colourOverlay;
          border: $border;
          opacity: 0;
          pointer-events: none;
          overflow: hidden;

          .thumbnail-overlay-cross {
            width: 100%;
            border-bottom: $borderSubtle;
            position: absolute;
            top: 50%;
            left: 50%;

            &:nth-child(1) {
              transform: translate(-50%, -50%) rotate(45deg);
            }

            &:nth-child(2) {
              transform: translate(-50%, -50%) rotate(-45deg);
            }
          }
        }

        &.active {
          .thumbnail-overlay {
            opacity: 1;
          }
        }
      }
    }

    .product__gallery-image {
      width: 56%;
      position: relative;

      img {
        width: 100%;
        height: auto;
        display: none;

        &.active {
          display: block;
        }
      }

      .gallery-next, .gallery-prev {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        width: 56px;
        height: 56px;
        padding: $space * 2;
        cursor: pointer;
        opacity: 0;
        pointer-events: none;
        transition: $transition;

        &.active {
          opacity: 1;
          pointer-events: all;
        }

        .gallery-arrow {
          width: 100%;
          height: 100%;
          border-left: $borderSubtle;
          border-bottom: $borderSubtle;
          transform: rotate(45deg);
        }
      }

      .gallery-next {
        right: 0;

        .gallery-arrow {
          transform: rotate(225deg);
        }
      }
    }
  }

  .product__info {
    width: 40%;
    padding-left: $space * 3;

    .product__title {
      font-family: $fontStackTitle;
      font-size: $fontSizeLarge;
      line-height: $lineHeightTitle;
      margin-bottom: $space;
    }

    .product__description {
      border-top: $border;
      padding-top: $space * 2;
      margin-bottom: $space * 2;

      p {
        margin-top: 0;
        margin-bottom: $space * 2;

        &:last-child {
          margin-bottom: 0;
        }
      }
    }

    .product__price {
      border-bottom: $border;
      margin-bottom: $space * 2;
      padding-bottom: $space * 2;
    }

    .product__cart-link {
      margin-top: $space / 2;
      text-transform: uppercase;
      font-size: $fontSizeSmall;

      &:hover {
        text-decoration: underline;
      }
    }

    #AddToCartForm {
      .product__options {
        margin-bottom: $space * 2;
        display: flex;
        align-items: flex-end;

        label {
          font-size: $fontSizeSmall;
          text-transform: uppercase;
        }

        #Quantity {
          width: 80px;
        }
      }

      input, select {
        //background: none;
        border-radius: 0 !important;
        border: $borderGrey;
        outline: none !important;
        text-align: right;
        padding-right: $space / 2;
        padding-left: $space / 2;
        margin-left: $space;
        margin-right: $space;
        height: 34px;

        &:first-child {
          margin-left: 0;
        }
      }

      button {
        margin: 0;
        @include pad(2, 1);
        border-radius: 0 !important;
        border: $border;
        outline: none !important;
        text-transform: uppercase;
        font-size: $fontSizeMedium;
        background: none;
        color: $colour;
        cursor: pointer;

        &:hover {
          background: $colour;
          color: $colourBackground;
        }
      }
    }
  }

  @media screen and (max-width: $tablet) {
    padding: $spaceBorderMobile;
    padding-top: $spaceBorder * 1.5;
    flex-direction: column;

    .product__gallery {
      justify-content: flex-start;
      flex-direction: row-reverse;
      width: 100%;

      .product__gallery-menu {
        margin-left: $space * 2;
        margin-right: 0;

        .product__gallery-menu-thumbnail {}
      }

      .product__gallery-image {
        width: 100%;
      }
    }

    .product__info {
      width: 100%;
      padding-left: 0;
      padding-top: $space * 2;
    }
  }

  @media screen and (max-width: $mobile) {
    .product__gallery {
      .product__gallery-menu {
        .product__gallery-menu-thumbnail {
          width: 60px;
          height: 60px;
        }
      }
    }
  }
}

