  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: $indexLoadingScreen;
  background: $white;
  user-select: none;
  cursor: pointer;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 1;
  transition: 0.5s;
  pointer-events: none;

  &.active {
    opacity: 0;
  }
}

@keyframes logo {
  0% { opacity: 0; }
  100% { opacity: 1; }
}

.landing-page {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: $indexLandingPage;
  background: $colour;
  color: $black;
  user-select: none;
  cursor: pointer;

  .landing-page__logo {
    width: 100%;
    height: 100%;
    opacity: 0.85;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: $indexLandingPage + 1;
    position: absolute;
    top: 0;
    left: 0;

