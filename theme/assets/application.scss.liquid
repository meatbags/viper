      .cart__item-info {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
        padding-left: $space * 2;
        position: relative;

        .cart__item-title {
          font-size: $fontSizeLarge;
          font-family: $fontStackTitle;
          line-height: $lineHeightTitle;
          //border-bottom: $border;
          text-decoration: underline;
          margin-bottom: $space * 2;
        }

        .cart__item-variant {}

        .cart__item-price {
          input {
            width: 60px;
            border-radius: 0 !important;
            border: $borderGrey;
            outline: none !important;
            text-align: right;
          }
        }

        .cart__item-remove {
          position: absolute;
          top: 0;
          right: 0;
          border: $border;
          text-transform: uppercase;
          font-size: $fontSizeSmall;

          a {
            @include pad(1, 1);
          }

          &:hover {
            background: $colour;
            color: $colourBackground;
          }
        }
      }
    }

    .cart__checkout {
      .cart__checkout-sub-total {
        text-decoration: underline;
      }

      button {
        @include pad(2, 1);
        border-radius: 0 !important;
        border: $border;
        outline: none !important;
        text-transform: uppercase;
        text-decoration: none;
        font-size: $fontSizeMedium;
        background: none;
        color: $colour;
        cursor: pointer;

        &:hover {
          background: $colour;
          color: $colourBackground;
        }
      }
    }

    .cart__empty-msg {
       a {
         text-decoration: underline;
       }
    }
  }

  @media screen and (max-width: $tablet) {
    padding: $spaceBorderMobile;
    padding-top: $spaceBorder * 1.5;
    min-height: 100vh;

    .cart__inner {
      width: 100%;
    }
  }

  @media screen and (max-width: $mobile) {
    .cart__inner {
      .cart__item {
        padding: $space;

        .cart__item-image {
          width: 100px;
          height: 100%;
        }
        .cart__item-info {
          font-size: $fontSizeSmall;
          padding-left: $space;

          .cart__item-title {
            width: 100%;
            font-size: $fontSizeMedium;
            margin-bottom: $space;
          }

          .cart__item-price {
            input {
              width: 50px;
            }
          }

          .cart__item-remove {
            top: auto;
            right: auto;
            bottom: 0;
            left: $space;
          }
        }
      }

      .cart__checkout {
        padding-bottom: $space * 2;
        border-bottom: $border;

        button {
          font-size: $fontSize;
        }
      }
    }
  }
}

.page {
  width: 100%;
  display: flex;
  justify-content: flex-end;
  min-height: 100vh;
  padding: $spaceBorder;
  padding-left: 0;

  .page__inner {
    width: 68%;
    border-left: $border;
    padding-left: $spaceBorder / 2;

    .page__title {
      //display: none;
      width: 100%;
      font-family: $fontStackTitle;
      line-height: $lineHeightTitle;
      font-size: $fontSizeLarge;
      margin-bottom: $space * 2;
    }

    p {
      &:nth-of-type(1) {
        margin-top: 0;
      }

      &:last-child {
        margin-bottom: 0;
      }
    }

    form {
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      align-items: flex-start;

      input, textarea {
        border-radius: 0 !important;
        border: none;
      }

      label {
        text-transform: capitalize;
      }

      input {
        width: 300px;
        max-width: 100%;
        margin-bottom: $space;
      }

      textarea {
        width: 600px;
        max-width: 100%;
        margin-bottom: $space;
      }

      .thankyou-msg {
        text-decoration: underline;
      }

      input[type=submit] {
        width: auto;
        margin-top: $space;
        @include pad(2, 1);
        border-radius: 0 !important;
        border: $border;
        outline: none !important;
        text-transform: capitalize;
        font-size: $fontSizeMedium;
        background: none;
        color: $colour;
        cursor: pointer;

        &:hover {
          background: $colour;
          color: $colourBackground;
        }
      }
    }
  }

  @media screen and (max-width: $tablet) {
    padding: $spaceBorderMobile;
    padding-top: $spaceBorder * 1.5;

    .page__inner {
      padding-left: 0;
      width: 100%;
      border-left: none;
      padding: none;
    }
  }

  @media screen and (max-width: $mobile) {
    input, textarea {
      width: 100%;
    }

    input[type=submit] {
      width: auto;
    }
  }
}

.custom-made {
  width: 100%;

  .custom-made__title {
    font-size: $fontSizeLarge;
    font-family: $fontStackTitle;
    line-height: $lineHeightTitle;
  }

  .custom-made__description {
    margin-top: $space * 2;
    margin-bottom: $space * 2;

    p {
      &:first-child {
        margin-top: 0;
      }

      &:last-child {
        margin-bottom: 0;
      }
    }
  }

  .custom-made__link {
    a {
      text-decoration: underline;
    }
  }

  @media screen and (max-width: $tablet) {
    margin-top: $space * 4;
    padding: $spaceBorderMobile;
    text-align: center;
  }
}


