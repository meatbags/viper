$fontStack: 'MyriadPro', sans-serif;
$fontStackTitle: 'Encient', serif;
$fontSizeSmall: 12px;
$fontSize: 16px;
$fontSizeMedium: 26px;
$fontSizeLarge: 50px;
$fontSizeHuge: 76px;
$lineHeight: 1.4;
$lineHeightTitle: 1;
$letterSpacing: 1px;
$letterSpacingLarge: 3px;
$letterSpacingHuge: 6px;

@mixin pad($x, $y) {
  padding-left: $x * $space;
  padding-right: $x * $space;
  padding-top: $y * $space;
  padding-bottom: $y * $space;
}


div, * {
  box-sizing: border-box;
  //outline: 1px dashed rgba(0,0,0,0.1);
}

html, body {
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
}

body {
  font-family: $fontStack;
  font-size: $fontSize;
  line-height: $lineHeight;
  letter-spacing: $letterSpacing;
  color: $colour;
  background: $colourBackground;
}

.wrapper {
  width: 100%;
}

a {
  text-decoration: none;
  color: inherit;
}

#admin-bar-iframe {
  display: none;
}

.nav {
  font-family: $fontStackTitle;
  line-height: $lineHeightTitle;
  position: fixed;
  top: 50%;
  right: 65vw;
  transform: translateY(-50%) rotate(15deg);
  user-select: none;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  z-index: $indexNav;

  .nav__title {
    font-size: $fontSizeHuge;
    letter-spacing: $letterSpacingHuge;

    &:hover {
      text-decoration: underline;
    }
  }

  .nav__item {
    cursor: pointer;
    letter-spacing: $letterSpacingLarge;
    font-size: $fontSizeLarge;
    @include pad(0, 0.25);

    &:hover {
      text-decoration: underline;
    }
  }

  &.nav--alt {
    align-items: flex-start;
    transform: translateY(-50%);
    left: $spaceBorder;

    .nav__item {
      font-size: $fontSizeMedium;
    }

    .nav__back {
      display: block;
    }
  }

  &.nav--hide {
    display: none;
  }
}

.footer {
  width: 100%;
  z-index: $indexFooter;
  padding: $spaceBorder;
  padding-top: $spaceBorder;
  padding-bottom: $space * 2;
  font-size: $fontSizeSmall;
  font-weight: bold;
  user-select: none;

  &.footer--fixed {
    position: fixed;
    left: 0;
    bottom: 0;
  }

  .footer__row {
    width: 100%;
    display: flex;

    &.footer__row--justify-end {
      justify-content: flex-end;
    }

    .footer__section {
      width: 50%;
      display: flex;

      .footer__item {
        text-transform: uppercase;
        @include pad(0.5, 0);

        &:hover {
          text-decoration: underline;
        }
      }

      &:nth-of-type(1) {
        justify-content: flex-start;

        .footer__item:nth-child(1) {
          padding-left: 0;
        }
      }

      &:nth-of-type(2) {
        justify-content: flex-end;

        .footer__item:last-child {
          padding-right: 0;
        }
      }
    }

    .back-button {
      width: 60px;
      height: 60px;

      a {
        display: flex;
        width: 100%;
        height: 100%;

        img {
          width: 100%;
          height: 100%;
          object-fit: contain;
          transform: rotate(180deg);
        }
      }
    }
  }
}

.grid {
  width: 100%;
  min-height: 100vh;
  display: flex;
  justify-content: flex-end;
  padding-right: $spaceBorder;

  .grid__inner {
    display: flex;
    justify-content: space-between;
    width: 68%;
    user-select: none;

    .grid__column {
      width: 33.333%;

      .grid__item {
        width: 100%;
        height: 32vw;

        a {
          position: relative;
          display: flex;
          width: 100%;
          height: 100%;

          img {
            width: 100%;
            height: 100%;
            object-fit: cover;
          }

          .grid__item-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: $colourOverlay;
            opacity: 0;
            pointer-events: none;
            display: flex;
            justify-content: flex-end;
            align-items: flex-start;
            border: $border;
            z-index: 1;

            .grid__item-text {
              @include pad(2, 2);
              text-align: center;
              line-height: $lineHeightTitle;

              .grid__item-title {
                font-family: $fontStackTitle;
                font-size: $fontSizeMedium;
                margin-bottom: $space / 2;
              }

              .grid__item-price {
                font-size: $fontSize;
              }
            }
          }

          &:hover {
            .grid__item-overlay {
              opacity: 1;
            }
          }
        }

        &.grid__item--double, &.grid__item--single {
          display: none;
        }
      }
    }
  }

  @media screen and (max-width: $tablet) {
    .grid__inner {
      .grid__column {
        width: 50%;

        .grid__item {
          height: 500px;
        }
        .grid__item.grid__item--double {
          display: block;
        }
        .grid__item.grid__item--triple {
          display: none;
        }
        &:nth-of-type(3) {
          display: none;
        }
      }
    }
  }

  @media screen and (max-width: $mobile) {
    padding-right: 0;

    .grid__inner {
      width: 100%;

      .grid__column {
        width: 100%;

        .grid__item.grid__item--single {
          display: block;
        }
        .grid__item.grid__item--double {
          display: none;
        }
        &:nth-of-type(2) {
          display: none;
        }
      }
    }
  }
}


// page-specific
.loading-screen {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: $indexLoadingScreen;
  background: $black;
  user-select: none;
  cursor: pointer;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0.5;
}

@keyframes logo {
  0% { opacity: 0; }
  100% { opacity: 1; }
}

.landing-page {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: $indexLandingPage;
  background: $colour;
  color: $black;
  user-select: none;
  cursor: pointer;
  display: flex;
  justify-content: center;
  align-items: center;

  img {
    height: 50vh;
    width: auto;
    object-fit: contain;
    animation-name: logo;
    animation-duration: 1s;
    animation-iteration-count: infinite;
    animation-direction: alternate;
  }
}

.background-image {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  overflow: hidden;
  background: $black;
  user-select: none;

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.25;
  }

  .background-image__landscape {
    display: none;

    &.active {
      display: block;
    }

    @media screen and (max-width: $mobile) {
      display: none !important;
    }
  }

  .background-image__portrait {
    display: none;

    @media screen and (max-width: $mobile) {
      &.active {
        display: block;
      }
    }
  }
}

.product {
  width: 100%;
  display: flex;
  padding: $spaceBorder;
  padding-bottom: $spaceBorder * 2;
  position: relative;

  .back-button {
    position: absolute;
    top: $spaceBorder;
    left: $spaceBorder;
    text-transform: uppercase;

    .back-button__text {
      font-size: $fontSizeSmall;
    }

    &:hover {
      text-decoration: underline;
    }
  }

  .product__gallery {
    width: 57.5%;
    display: flex;
    justify-content: flex-end;
    user-select: none;

    .product__gallery-menu {
      display: flex;
      flex-direction: column;
      margin-right: $space;
      position: relative;

      .product__gallery-menu-thumbnail {
        width: 180px;
        height: 180px;
        cursor: pointer;
        margin-bottom: $space;
        position: relative;

        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
        }

        .thumbnail-overlay {
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          background: $colourOverlay;
          border: $borderBlack;
          opacity: 0;
          pointer-events: none;
          overflow: hidden;

          .thumbnail-overlay-cross {
            width: 200%;
            border-bottom: $borderBlack;
            position: absolute;
            top: 50%;
            left: 50%;

            &:nth-child(1) {
              transform: translate(-50%, -50%) rotate(45deg);
            }

            &:nth-child(2) {
              transform: translate(-50%, -50%) rotate(-45deg);
            }
          }
        }

        &.active {
          .thumbnail-overlay {
            opacity: 1;
          }
        }
      }
    }

    .product__gallery-image {
      width: 58%;
      position: relative;

      img {
        width: 100%;
        height: auto;
        display: none;

        &.active {
          display: block;
        }
      }

      .gallery-next, .gallery-prev {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        width: 60px;
        height: 60px;
        padding: $space * 2;
        cursor: pointer;
        display: none;

        &.active {
          display: block;
        }

        .gallery-arrow {
          width: 100%;
          height: 100%;
          border-left: $borderBlack;
          border-bottom: $borderBlack;
          transform: rotate(45deg);
        }
      }

      .gallery-next {
        right: 0;

        .gallery-arrow {
          transform: rotate(225deg);
        }
      }
    }
  }

  .product__info {
    width: 42.5%;
    padding-left: $space * 3;

    .product__title {
      font-family: $fontStackTitle;
      font-size: $fontSizeLarge;
      line-height: $lineHeightTitle;
    }

    .product__price {
      border-top: $border;
      @include pad(0, 2);
    }

    .product__description {
      border-bottom: $border;
      padding-bottom: $space * 2;

      p {
        &:first-child {
          margin-top: 0;
        }

        &:last-child {
          margin-bottom: 0;
        }
      }
    }

    #AddToCartForm {
      .product__options {
        @include pad(0, 2);
        display: flex;
        align-items: center;

        label {
          font-size: $fontSizeSmall;
          text-transform: uppercase;
        }

        #Quantity {
          width: 80px;
        }
      }

      input, select {
        //background: none;
        border-radius: 0 !important;
        border: $borderGrey;
        outline: none !important;
        text-align: right;
        margin-left: $space;
        margin-right: $space;

        &:first-child {
          margin-left: 0;
        }
      }

      button {
        @include pad(0, 2);
        color: $colour;
        font-size: $fontSizeMedium;
        background: none;
        outline: none !important;
        border: none !important;
        cursor: pointer;
        text-decoration: underline;
        text-transform: uppercase;
        padding: 0;
        margin: 0;
      }
    }
  }
}


