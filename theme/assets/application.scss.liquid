$fontStack: 'MyriadPro', sans-serif;
$fontStackTitle: 'Encient', serif;
$fontSize: 16px;
$fontSizeLarge: 40px;
$lineHeight: 1;
$letterSpacing: 0px;

@mixin pad($x, $y) {
  padding-left: $x * $space;
  padding-right: $x * $space;
  padding-top: $y * $space;
  padding-bottom: $y * $space;
}


div, * {
  box-sizing: border-box;
}

body {
  font-family: $fontStack;
  font-size: $fontSize;
  line-height: $lineHeight;
  letter-spacing: $letterSpacing;
  color: $colour;
  background: $colourBackground;
}

.wrapper {
  width: 100vw;
  position: relative;
}

a {
  text-decoration: none;
  color: inherit;
}

.nav {
  font-family: $fontStackTitle;
  font-size: $fontSizeLarge;
  position: fixed;
  top: 50%;
  left: 35vw;
  transform: translateY(-50%) rotate(15deg);
  user-select: none;
  display: flex;
  flex-direction: column;
  align-items: flex-end;

  .nav__item {
    cursor: pointer;
    @include pad(0, 0.5);
    
    &:hover {
      text-decoration: underline;
    }
  }
}


// page-specific
.loading-screen {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: $indexLoadingScreen;
  background: $black;
  user-select: none;
  cursor: pointer;
  display: flex;
  justify-content: center;
  align-items: center;
  opacity: 0.5;
}

.landing-page {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: $indexLandingPage;
  background: $colour;
  color: $black;
  user-select: none;
  cursor: pointer;
  display: flex;
  justify-content: center;
  align-items: center;
}


