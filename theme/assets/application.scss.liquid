$fontStack: 'MyriadPro', sans-serif;
$fontStackTitle: 'Encient', serif;

// size
$fontSizeSmall: 12px;
$fontSize: 18px;
$fontSizeMedium: 28px;
$fontSizeLarge: 48px;
$fontSizeHuge: 68px;
$fontSizeNav: 58px;

// spacing
$lineHeight: 1.4;
$lineHeightTitle: 1;
$lineHeightNav: 0.72;
$letterSpacing: 1px;
$letterSpacingLarge: 3px;
$letterSpacingHuge: 6px;
$letterSpacingNavTitle: 1px;

@mixin pad($x, $y) {
  padding-left: $x * $space;
  padding-right: $x * $space;
  padding-top: $y * $space;
  padding-bottom: $y * $space;
}


div, * {
  box-sizing: border-box;
  //outline: 1px dashed rgba(0,0,0,0.1);
}

html, body {
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
}

body {
  font-family: $fontStack;
  font-size: $fontSize;
  line-height: $lineHeight;
  letter-spacing: $letterSpacing;
  color: $colour;
  background: $colourBackground;
}

.wrapper {
  width: 100%;
}

a {
  text-decoration: none;
  color: inherit;
}

#admin-bar-iframe {
  display: none;
}

.nav {
  font-family: $fontStackTitle;
  line-height: $lineHeightTitle;
  position: fixed;
  top: $spaceBorder;
  left: $spaceBorder;
  user-select: none;
  display: flex;
  z-index: $indexNav;

  .nav__inner {
    display: flex;
    align-items: flex-start;
    flex-direction: column;

    .nav__title {
      font-size: $fontSizeHuge;
      letter-spacing: $letterSpacingNavTitle;
      //white-space: nowrap;

      &:hover {
        opacity: 0.5;
      }
    }

    .nav__item {
      cursor: pointer;
      letter-spacing: $letterSpacingLarge;
      font-size: $fontSizeMedium;
      @include pad(0, 0.25);

      &:hover {
        text-decoration: underline;
      }

      &.active {
        text-decoration: underline;
      }
    }
  }

  &.nav--page {
    left: 0;
    width: 30.5%;
    justify-content: center;
  }

  &.nav--index {
    top: 50%;
    left: 50vw;
    transform: translate(-50%, -50%);
    line-height: $lineHeightNav;

    .nav__inner {
      align-items: flex-end;

      .nav__item {
        @include pad(1, 0.25);
        margin-top: 0.25 * $space;
        margin-bottom: 0.25 * $space;
        font-size: $fontSizeNav;
        //text-shadow: 2px 2px 4px $colourNavDropShadow;
        color: $colourNav;
      }
    }
  }

  &.nav--hide {
    display: none;
  }

  @media screen and (max-width: $mediumScreen) {
    &.nav--page {
      left: $spaceBorder;
      justify-content: flex-start;
    }

    &.nav--index {
      // right: 30vw;
    }
  }

  @media screen and (max-width: $tablet) {
    display: none;

    &.nav--index {
      display: flex;
      //top: 38%;
      //left: 22%;
      //right: auto;
      //transform: translate(-50%, -50%) rotate(19deg);

      .nav__inner {
        .nav__item {
          font-size: $fontSizeLarge;
          //text-shadow: 1px 1px $colourNavDropShadow;
        }
      }
    }
  }

  @media screen and (max-width: $mobilePortrait) {
    &.nav--index {
      //top: 39%;
      //left: 20%;
      //transform: translate(-50%, -50%) rotate(19deg) scale(0.6);
    }
  }
}

.mobile-nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: $colourMobileNavBackground;
  opacity: 0;
  pointer-events: none;
  transition: $transition;
  z-index: $indexMobileNav;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;

  .mobile-nav__item {
    @include pad(1, 1);
    font-family: $fontStackTitle;
    font-size: $fontSizeLarge;
    line-height: $lineHeightTitle;
  }

  .mobile-nav__footer {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    display: flex;

    .mobile-nav__footer-item {

    }
  }

  &.active {
    opacity: 1;
    pointer-events: all;
  }

  @media screen and (min-width: $tablet - 1) {
    display: none;
  }
}

.mobile-nav-button {
  //top: $spaceBorderMobile;
  //right: $spaceBorderMobile;
  top: 0;
  right: 0;
  padding: $spaceBorderMobile;
  position: fixed;
  z-index: $indexMobileNavButton;

  .mobile-nav-button__hamburger {
    width: 38px;
    height: 34px;

    .mobile-nav-button__bar {
      width: 100%;
      background: $colour;
      height: 1px;
      margin-bottom: 17px;
      transform-origin: 19px 0.5px;
      transition: $transition;

      &:last-child {
        margin-bottom: 0;
      }
    }
  }

  &.active {
    .mobile-nav-button__hamburger {
      .mobile-nav-button__bar {
        &:first-child {
          transform: translateY(17px) rotate(45deg);
        }

        &:nth-child(2) {
          opacity: 0;
        }

        &:last-child {
          transform: translateY(-18px) rotate(-45deg);
        }
      }
    }
  }

  @media screen and (min-width: $tablet - 1) {
    display: none;
  }
}

.footer {
  width: 100%;
  z-index: $indexFooter;
  padding: $spaceBorder;
  padding-top: $spaceBorder;
  padding-bottom: $space * 2;
  font-size: $fontSizeSmall;
  font-weight: bold;
  user-select: none;
  pointer-events: none;

  &.footer--fixed {
    position: fixed;
    left: 0;
    bottom: 0;
  }

  .footer__row {
    width: 100%;
    display: flex;

    &.footer__row--justify-end {
      justify-content: flex-end;
    }

    .footer__section {
      width: 50%;
      display: flex;

      .footer__item {
        text-transform: uppercase;
        @include pad(0.5, 0);
        pointer-events: all;
        text-decoration: underline;

        &:hover {
          text-decoration: underline;
        }
      }

      &:nth-of-type(1) {
        justify-content: flex-start;

        .footer__item:nth-child(1) {
          padding-left: 0;
        }
      }

      &:nth-of-type(2) {
        justify-content: flex-end;

        .footer__item:last-child {
          padding-right: 0;
        }
      }
    }

    .footer__back-button {
      width: 60px;
      height: 60px;
      pointer-events: all;

      a {
        display: flex;
        width: 100%;
        height: 100%;

        img {
          width: 100%;
          height: 100%;
          object-fit: contain;
          transform: rotate(180deg);
        }
      }
    }
  }

  @media screen and (max-width: $tablet) {
    display: none;
  }
}

.mobile-footer {
  width: 100%;
  height: 100vh;
  padding: $spaceBorderMobile;
  padding-bottom: $space * 2;
  display: flex;
  justify-content: center;
  align-items: center;

  .mobile-footer__section {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;

